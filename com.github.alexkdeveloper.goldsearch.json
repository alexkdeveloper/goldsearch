{
    "app-id": "com.github.alexkdeveloper.goldsearch",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.alexkdeveloper.goldsearch",
    "finish-args": [
       "--device=dri", 
       "--share=ipc",
       "--socket=fallback-x11",
       "--socket=wayland",
       "--socket=pulseaudio"
    ],
    "cleanup": [
       "/include",
       "/lib/pkgconfig",
       "/man",
       "/share/doc",
       "/share/gtk-doc",
       "/share/man",
       "/share/pkgconfig",
       "/share/vala",
       "*.la",
       "*.a"
    ],
    "modules": [
       {
          "name": "Gold Search",
          "buildsystem": "meson",
          "sources": [
              {
                  "type" : "dir",
                  "path" : "."
              }
          ]
        }
    ]
  }
  
